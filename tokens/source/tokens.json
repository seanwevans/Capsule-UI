{
  "$schema": "https://design-tokens.org/schema.json",
  "color": {
    "background": {
      "$type": "color",
      "$value": {
        "light": "#ffffff",
        "dark": "#0f172a"
      }
    },
    "text": {
      "$type": "color",
      "$value": {
        "light": "#0f172a",
        "dark": "#e6e8ef"
      }
    },
    "brand": {
      "$type": "color",
      "$value": {
        "light": "#4f46e5",
        "dark": "#818cf8"
      }
    }
  },
  "spacing": {
    "sm": { "$type": "dimension", "$value": "4px" },
    "md": { "$type": "dimension", "$value": "8px" },
    "lg": { "$type": "dimension", "$value": "16px" }
  }
}
