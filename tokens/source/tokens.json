{
  "$schema": "../token.schema.json",
  "color": {
    "background": {
      "$type": "color",
      "$value": { "light": "#ffffff", "dark": "#000000", "acme": "#fdf2f8" }
    },
    "text": {
      "$type": "color",
      "$value": { "light": "#000000", "dark": "#ffffff", "acme": "#1a1033" }
    },
    "inverse-text": {
      "$type": "color",
      "$value": { "light": "#ffffff", "dark": "#000000", "acme": "#ffffff" }
    },
    "brand": {
      "$type": "color",
      "$value": { "light": "#ff0000", "dark": "#00ff00", "acme": "#ff00ff" }
    },
    "border": {
      "$type": "color",
      "$value": { "light": "#e5e7eb", "dark": "#4b5563", "acme": "#d1d5db" }
    },
    "success": {
      "$type": "color",
      "$value": { "light": "#16a34a", "dark": "#22c55e", "acme": "#16a34a" }
    },
    "warning": {
      "$type": "color",
      "$value": { "light": "#d97706", "dark": "#f59e0b", "acme": "#d97706" }
    },
    "error": {
      "$type": "color",
      "$value": { "light": "#dc2626", "dark": "#ef4444", "acme": "#dc2626" }
    }
  },
  "spacing": {
    "xs": { "$type": "dimension", "$value": "2px" },
    "sm": { "$type": "dimension", "$value": "4px" },
    "md": { "$type": "dimension", "$value": "8px" },
    "lg": { "$type": "dimension", "$value": "16px" },
    "xl": { "$type": "dimension", "$value": "24px" },
    "2xl": { "$type": "dimension", "$value": "32px" }
  },
  "radius": {
    "none": { "$type": "dimension", "$value": "0px" },
    "sm": { "$type": "dimension", "$value": "4px" },
    "md": { "$type": "dimension", "$value": "8px" },
    "lg": { "$type": "dimension", "$value": "16px" },
    "full": { "$type": "dimension", "$value": "9999px" }
  },
  "z-index": {
    "base": { "$type": "number", "$value": 0 },
    "dropdown": { "$type": "number", "$value": 1000 },
    "modal": { "$type": "number", "$value": 1100 },
    "popover": { "$type": "number", "$value": 1200 },
    "tooltip": { "$type": "number", "$value": 1300 }
  },
  "motion": {
    "duration": {
      "fast": { "$type": "duration", "$value": "100ms" },
      "normal": { "$type": "duration", "$value": "200ms" },
      "slow": { "$type": "duration", "$value": "400ms" }
    }
  },
  "typography": {
    "font-size": {
      "sm": { "$type": "font-size", "$value": "12px" },
      "md": { "$type": "font-size", "$value": "16px" },
      "lg": { "$type": "font-size", "$value": "20px" },
      "xl": { "$type": "font-size", "$value": "24px" }
    },
    "font-weight": {
      "regular": { "$type": "font-weight", "$value": 400 },
      "medium": { "$type": "font-weight", "$value": 500 },
      "bold": { "$type": "font-weight", "$value": 700 }
    },
    "line-height": {
      "sm": { "$type": "number", "$value": 1.2 },
      "md": { "$type": "number", "$value": 1.5 },
      "lg": { "$type": "number", "$value": 1.8 }
    }
  }
}
